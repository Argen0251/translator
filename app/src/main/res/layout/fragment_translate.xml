<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/liner0"
        android:background="@color/blue"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:gravity="start">
        <ImageButton
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="22dp"
            android:backgroundTint="@color/white"
            android:layout_height="22dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/ic_swich" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/swich"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@id/liner0"
        android:orientation="horizontal"
        android:background="@drawable/bg_rounded"
        android:gravity="center"
        android:elevation="6dp"
        android:layout_marginHorizontal="18dp"
        android:layout_margin="18dp">

        <TextView
            android:id="@+id/src"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="English"
            android:textSize="18sp"
            android:layout_marginEnd="90dp"/>

        <ImageButton
            android:id="@+id/switchBtn"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/ic_swich" />

        <TextView
            android:id="@+id/dst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Russian"
            android:layout_marginStart="90dp"
            android:textSize="18sp" />
    </LinearLayout>
<LinearLayout
    android:id="@+id/liner2"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    app:layout_constraintTop_toBottomOf="@id/swich"
    android:layout_marginTop="20dp"
    android:orientation="vertical"
    android:gravity="end"
    android:layout_marginHorizontal="18dp"
    android:background="@drawable/bg_rounded2"
    android:elevation="2dp">

    <EditText
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_rounded"
        android:hint="Enter text"
        android:padding="12dp"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/translate_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        android:textColor="@color/white"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Translate"/>

</LinearLayout>
    <LinearLayout
        android:id="@+id/liner3"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        app:layout_constraintTop_toBottomOf="@id/liner2"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="end"
        android:layout_marginHorizontal="18dp"
        android:background="@drawable/bg_rounded3"
        android:elevation="2dp">
    <TextView
        android:id="@+id/txt_translate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:padding="12dp"
        android:background="@drawable/bg_rounded"
        android:text="Translation will appear here"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/liner2" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/star"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_star"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_translate" />

    <ImageButton
        android:id="@+id/copy_btn"
        android:layout_width="40dp"
        android:layout_height="30dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/ic_copy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_translate" />


</LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>